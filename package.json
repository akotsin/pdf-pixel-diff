{
  "name": "pdf-pixel-diff",
  "version": "1.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "typescript:check": "tsc --noEmit",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "code:check": "npm run eslint:fix && npm run typescript:check"
  },
  "author": {
    "name": "Artsiom Kotsin",
    "email": "akotsin@cleargov.com",
    "url": "https://github.com/akotsin"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akotsin/pdf-pixel-diff.git"
  },
  "keywords": [
    "PDF",
    "Compare",
    "Diff",
    "Pixel",
    "Difference",
    "Image",
    "Comparison",
    "PDF Comparison",
    "PDF Difference",
    "PDF Pixel Difference"
  ],
  "license": "ISC",
  "description": "A library for comparing PDF files using pixel by pixel image comparison.",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "node-poppler": "^9.1.1",
    "pixelmatch": "^7.1.0",
    "sharp": "^0.34.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
